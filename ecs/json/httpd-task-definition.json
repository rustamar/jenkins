[
  {
    "cpu": ${cpu},
    "essential": true,
    "image": "${image_url}",
    "memory": 512,
    "name": "${container_name}",
    "mountPoints": [
      {
        "sourceVolume": "http_storage",
        "containerPath": "/usr/local/apache2/htdocs"
      }
    ],
    "portMappings": [
      {
        "containerPort": ${container_port},
        "hostPort": ${container_port}
      }
    ],
    "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
            "awslogs-group": "${log_group_name}",
            "awslogs-region": "${log_group_region}"
        }
    }
  }
]
